# =============================================================================
# uman.ia - Environment Configuration
# Copy this file to .env and fill in your values
# =============================================================================

# ANTHROPIC API (required)
# Get your key at: https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-api03-xxxxx

# DOMAIN CONFIGURATION
DOMAIN=yourdomain.com
API_URL=https://api.yourdomain.com

# GOOGLE OAUTH (optional, for future auth features)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# LOCAL DEVELOPMENT
LOCAL_FRONTEND_PORT=3007
LOCAL_BACKEND_PORT=8002

# SECURITY
# Key to access /chats endpoint (set your own secret)
CHATS_ACCESS_KEY=your-secret-key-here

# SERVER DEPLOYMENT (for deploy.sh)
VPS_HOST=your.server.ip
VPS_USER=root
VPS_PATH=/var/www/your-api
